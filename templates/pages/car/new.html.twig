{% extends "base.html.twig" %}

{% block title %}Création d'une nouvelle voiture{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Création d'une nouvelle voiture</h1>
        {{form_start(form)}}
            <div class="container">
                <div>
                    {{form_widget(form)}}
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Ajout voiture</button>
        {{form_end(form)}}
    </div>
{% endblock %}

